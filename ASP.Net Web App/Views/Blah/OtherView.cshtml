@{
    ViewData["Title"] = "Calculator";
}

@model Calc;
<!-- main html  -->
<div class="container">
    <h1>Student grade calculator</h1>
    <div class="screen-body-item">
        <div class="app">
            <form method="post">
                <div class="form-group">
                    <!-- option for taking the input -->
                    <input asp-for="assignments"
                            class="form-control"
                            placeholder="Assignments"
                            id="assignments" />
                </div>
                <div class="form-group">
                    <input asp-for="project"
                            class="form-control"
                            placeholder="Group Project"
                            id="project" />
                </div>
                <div class="form-group">
                    <input asp-for="quiz"
                            class="form-control"
                            placeholder="Quizzes"
                            id="quiz" />
                </div>
                <div class="form-group">
                    <input asp-for="midterm"
                            class="form-control"
                            placeholder="Midterm Exam"
                            id="mid" />
                </div>
                <div class="form-group">
                    <input asp-for="final"
                            class="form-control"
                            placeholder="Final Exam"
                            id="fin" />
                </div>
                <div class="form-group">
                    <input asp-for="intex"
                            class="form-control"
                            placeholder="INTEX"
                            id="intex" />
                </div>
                <div>
                    <input id="btnSend"
                            type="submit"
                            value="show Percentage"
                            class="form-button"
                            onclick="calculate()" />
                </div>

                <div asp-validation-summary="All" ></div>

                <!-- for showing the result-->
                <div class="form-group showdata">
                    <label id="showdata"></label>
                </div>
            </form>
            <script src="~/js/JavaScript.js"></script>
        </div>
    </div>
</div>